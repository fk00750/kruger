{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "declaration": true,
    "declarationDir": "dist" 
  },
  "include": ["src/**/*.ts",],
  "exclude": ["node_modules"]
}
